.slick-slider ul.slick-dots {
    list-style: none;
    text-align: center;
    position: absolute;
    bottom:0;
    left:0;
    right:0;
    margin: 0;
  }

  .slick-slider ul.slick-dots li:last-child:after {
    border-color: rgba(0, 0, 0, 0.65) transparent rgba(0, 0, 0, 0.65) transparent;
    border-style: solid;
    border-width: 0 36px 36px 0;
    content: "";
    display: block;
    position: absolute;
    left: 100%;
    top: 0;
  }
  .slick-slider ul.slick-dots li:first-child:before {
    border-color: transparent rgba(0, 0, 0, 0.65) rgba(0, 0, 0, 0.65) transparent;
    border-style: solid;
    border-width: 0 0 36px 36px;
    content: "";
    display: block;
    position: absolute;
    right: 100%;
    top: 0;
  }
  .slick-slider ul.slick-dots li {
    display:inline-block;
    margin: 0;
    position:relative;
    padding: 12px 12px;
    background-color: rgba(0, 0, 0, 0.65);
  }
  .slick-slider ul.slick-dots li button {

    background-color: #fff;
    -webkit-border-radius: 12px;
    -moz-border-radius: 12px;
    border-radius: 12px;
    display: block; 
    height: 12px;
    width: 12px;
    text-indent: 110%;
    overflow: hidden;
    white-space: nowrap;
  }
  .slick-slider ul.slick-dots li button:focus,
  .slick-slider ul.slick-dots li button:active,
  .slick-slider ul.slick-dots li button:hover,
  .slick-slider ul.slick-dots li.slick-active button{
    background-image: none;
    outline: 0;
    -webkit-box-shadow: none;
    box-shadow: none;
    background-color: {{ settings.color_accent }};
  }


  .sSlider {
    text-align: center;
  }

  /*
  * Slide and banner
  */

  .sSlide { 
    height: 500px;
    max-height: 500px;
    position: relative;
  }
  .sSlide .sSlide-badge {
    position: absolute;
    top: 25%;
    right: 15%;
    padding: 15px;
  }
  .sSlide .sSlide-badge a.sSlide-header {
    background: rgba(0, 0, 0, 0.85);
    color: white;
    padding: 10px 20px;
  }
  .sSlide .sSlide-badge a.sSlide-subheader {
    background: rgba({{ settings.color_accent }}, 0.85);
    color: white;
    padding: 10px 20px;
    float: right;
    margin-top: -12px;
  }

